#!/bin/bash
# Generated by Chef

# Dynamically populate internal routes if any specifed
<% Array(@config[:iroute]).each do |v| -%>
echo "iroute <%= v %>" >> $1
<% end -%>

# Dynamicly populate pushes to client if any specified
<% if @config[:redirect_gateway] -%>
echo "push \"redirect-gateway #{@config[:redirect_gateway]}\"" >> $1
<% end -%>
<% if @config[:push_dns_server] -%>
echo "push \"dhcp-option DNS #{@config[:push_dns_server]}\"" >> $1
<% end -%>
<% Array(@config[:push]).each do |v| -%>
echo "push \"<%= v %>\"" >> $1
<% end -%>

# Dynamicly populate routes if any specified
<% Array(@config[:routes]).each do |v| -%>
echo "route <%= v %>" >> $1
<% end -%>